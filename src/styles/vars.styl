:root
  --header-size: 82px
  --side-bar-width: 300px

  --green: #34c924
  --inset-shadow: inset 0 -0.6em 1em -0.35em rgba(0,0,0,.17),
                  inset 0 0.6em 2em -0.3em hsla(0,0%,100%,.15),
                  inset 0 0 0 0.05em hsla(0,0%,100%,.12)

  --orange-button: rgb(252, 186, 3)
  --blue-button: rgb(36, 140, 201)
  --gray-button:  #e3e3e3
  --red-button: #f00
  --main-gray-gradient: linear-gradient(315deg, #566473 0%, #434e5a 74%)