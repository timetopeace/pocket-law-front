fancy-border()
  padding: 6px 14px
  font-size: 14px
  line-height: 1.4
  color: #555
  background-color: #fff
  border: 1px solid #ccc !important
  border-radius: 4px
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075)

fancy-small-button()
  display: flex
  justify-content: center
  align-items: center
  width: 29px
  height: 29px
  color: white
  background: var(--green)
  box-shadow: var(--inset-shadow)
  border-radius: 8px
  margin-left: 10px
  cursor: pointer
  font-size: 25px
  font-weight: 500