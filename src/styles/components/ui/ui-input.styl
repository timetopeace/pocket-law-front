.ui-input
  .ui-input--not-editable
    cursor: pointer

input[type="text"], input[type="password"], input[type="number"], textarea
  fancy-border()
  height: 34px
  padding: 6px 30px
  padding-left: 10px

  &:disabled
    background-color: #eaeaea !important
    cursor: default

input[type=number].ui-input--small-number
  padding: 2px 4px
  height: 18px
  width: 42px

  &::-webkit-inner-spin-button
    -webkit-appearance: auto !important

.input--errored
  border-color: red

textarea
  max-width: 470px
  max-height: 500px
  min-width: 100px !important
  min-height: 80px
  width: 280px
  height: 150px

input[type=number]::-webkit-inner-spin-button
  -webkit-appearance: none

input[type="submit"], .button
  padding: 10px 20px
  border-radius: 4px
  border-width: 1px
  text-decoration: none
  font-size: 100%
  cursor: pointer
  color: #fff !important
  background-color: var(--green)
  box-shadow: var(--inset-shadow)
  text-align: center
  max-width: 220px

.button--wide
  width: 100%
  max-width: none !important

.button--regularly-wide
  width: 172px

.button--disabled
  opacity: 0.4
  cursor: default
  pointer-events: none

.button-orange
  background-color: var(--orange-button)

.button-blue
  background-color: var(--blue-button)

.button-red
  background-color: var(--red-button)

.button-gray
  background-color: var(--gray-button)
  color: #444 !important

.button-rounded
  border-radius: 14px

.ui-input[type="date"], .ui-input[type="datetime-local"]
  border: 1px solid #c4c4c4;
  border-radius: 5px;
  background-color: #fff;
  padding: 3px 5px;
  box-shadow: inset 0 3px 6px rgba(0,0,0,0.1);
  max-width: 185px

  &:disabled
    background: #eaeaea
    cursor: default

.ui-input[type="checkbox"]
  -webkit-appearance: none
  -moz-appearance: none
  appearance: none
  -webkit-tap-highlight-color: transparent
  cursor: pointer
  height: 24px
  min-width: 52px
  border-radius: 16px
  display: inline-block
  position: relative
  margin: 0
  border: 2px solid #e6441c
  background-image: linear-gradient(315deg, #282e35 0%, #363f4a 74%);
  transition: all .2s ease
  z-index: 0

  &:after
    content: ''
    position: absolute
    top: 2px
    left: 2px
    width: 16px
    height: 16px
    border-radius: 50%
    background: white
    box-shadow: 0 1px 2px rgba(44,44,44,.2)
    transition: all .2s cubic-bezier(.5,.1,.75,1.35)

  &:checked
    border-color: #1ce63a

    &:after
      transform: translatex(28px)

  &:disabled
    pointer-events: none