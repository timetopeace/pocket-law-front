.ui-search-bar
  height: 72px

  form
    display: flex

    .ui-search-bar__fields
      display: flex
      align-items: center
      flex-wrap: wrap

    .ui-search-bar__confirm
      fancy-border()
      width: 71px
      height: 71px
      min-height: auto !important
      padding: 4px
      cursor: pointer

      img, .loading
        width: 100%
        height: 100%
        min-height: auto